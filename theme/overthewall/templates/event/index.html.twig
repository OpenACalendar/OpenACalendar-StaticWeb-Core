{% extends 'event/page.html.twig' %}

{% block innerContent %}

	<ul>
		<li>
			<div class="">{{  event.title }}</div>
			<div class="">{{  event.description | nl2br }}</div>
			{%  if event.url %}<div class=""><a href="{{  event.url }}">Find out more at {{  event.url }}</a></div>{%  endif %}
			<div class="">{{  event.start | date("F jS \\a\\t g:ia") }}</div>
			<div class="">{{  event.end | date("F jS \\a\\t g:ia") }}</div>
			<div class="">{{  event.country.title }}</div>
			<div class="">{{  event.timeZone.code }}</div>
		</li>
	</ul>


  	<ul>
  		{%  for group in groups %}
  			<li>
  				<div class="">Group: {{  group.title }}</div>
  				<div class=""><a href="{{ ("/group/" ~ group.slug) | internalLinkToDir }}">More</a></div>
  			</li>
  		{% endfor %}
  	</ul>

{% endblock %}

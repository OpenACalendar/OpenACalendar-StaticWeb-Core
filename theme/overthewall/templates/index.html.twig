{% extends 'page.html.twig' %}

{% block content %}

	<p>Welcome!</p>

	<ul>
		{%  for event in events %}
			<li>
				<div class="">{{  event.title }}</div>
        <div class="">{{  event.description | nl2br }}</div>
				<div class="">{{  event.start | date("F jS \\a\\t g:ia") }}</div>
				<div class="">{{  event.end | date("F jS \\a\\t g:ia") }}</div>
				<div class=""><a href="{{ ("/event/" ~ event.slug) | internalLinkToDir }}">More</a></div>
			</li>
		{% endfor %}
	</ul>

{% endblock %}

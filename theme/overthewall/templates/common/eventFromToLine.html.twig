<div class="date">
	<time datetime="{{ startAt|totimezone(timezone)|date('c') }}" itemprop="startDate">
		<span class="startDay">{{ startAt|totimezone(timezone)|date('D jS') }}</span>
		<span class="startMonthYear">{{ startAt|totimezone(timezone)|date('M Y') }}</span>
		<span class="startTime">
			{{ startAt|totimezone(timezone)|date('g:ia') }}
		</span>
	</time>
	<span class="to">to</span>
	{% if sameday(startAt,endAt) %}
		<time datetime="{{ endAt|totimezone(timezone)|date('c', timezone) }}" itemprop="endDate">
			<span class="end">
				{{ endAt|totimezone(timezone)|date('g:ia') }}
			</span>
		</time>
	{% else %}
		<time datetime="{{ endAt|totimezone(timezone)|date('c', timezone) }}" itemprop="endDate">
			<span class="end">
				{{ endAt|totimezone(timezone)|date('D jS M Y g:ia') }}
			</span>
		</time>
	{% endif %}
	{% if showTimeZone %}
		({{ timezone }} time)
	{% endif %}
</div>
<div class="date">
	<time datetime="{{ startAt|tolocaltimeformatted('c', timezone) }}" itemprop="startDate">
		<span class="startDay">{{ startAt|tolocaltimeformatted('D jS', timezone) }}</span>
		<span class="startMonthYear">{{ startAt|tolocaltimeformatted('M Y', timezone) }}</span>
		<span class="startTime">
			{{ startAt|tolocaltimeformatted('g:ia', timezone) }}
		</span>
	</time>
	<span class="to">to</span>
	{% if sameday(startAt,endAt) %}
		<time datetime="{{ endAt|tolocaltimeformatted('c', timezone) }}" itemprop="endDate">
			<span class="end">
				{{ endAt|tolocaltimeformatted('g:ia', timezone) }}
			</span>
		</time>
	{% else %}
		<time datetime="{{ endAt|tolocaltimeformatted('c', timezone) }}" itemprop="endDate">
			<span class="end">
				{{ endAt|tolocaltimeformatted('D jS M Y g:ia', timezone) }}
			</span>
		</time>
	{% endif %}
	{% if showTimeZone %}
		({{ timezone }} time)
	{% endif %}
</div>
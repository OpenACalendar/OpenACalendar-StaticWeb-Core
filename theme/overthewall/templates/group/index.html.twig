{% extends 'page.html.twig' %}

{% block content %}

	<h2>{{  group.title }}</h2>

	<ul>
		<li>
			<div class="">{{  group.title }}</div>
			<div class="">{{  group.description | nl2br }}</div>
		</li>
	</ul>


	<ul class="mainListEvents">
		{% for event in events %}
			{% include '/common/mainListEvent.html.twig' with {'event':event }  %}
		{% else %}
			<li class="nodata">
				There are no upcoming events.
			</li>
		{% endfor %}
	</ul>

{% endblock %}

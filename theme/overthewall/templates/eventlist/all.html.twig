{% extends 'page.html.twig' %}

{% block content %}

	<p>All Events</p>

	<p>To see current events only, <a href="index.html">click here</a></p>

	<ul>
		{%  for event in allEvents %}
			<li>
				<div class="">{{  event.title }}</div>
				<div class="">{{  event.description | nl2br }}</div>
				<div class="">{{  event.start | date("F jS \\a\\t g:ia") }}</div>
				<div class="">{{  event.end | date("F jS \\a\\t g:ia") }}</div>
				<div class=""><a href="{{  event.slug }}/">More</a></div>
			</li>
		{% endfor %}
	</ul>

{% endblock %}

{% extends 'page.html.twig' %}

{% block content %}

	<h2>Events</h2>

	<div id="innerPageWrapper">
		<ul id="innerPageActions">
		</ul>
		<div id="innerPage">

			<ul class="mainListEvents">
				{% for event in events %}
					{% include '/common/mainListEvent.html.twig' with {'event':event }  %}
				{% else %}
					<li class="nodata">
						There are no upcoming events.
					</li>
				{% endfor %}
			</ul>

			<p>To see all events (including old ones), <a href="{{ "/event/all.html" | internalLink }}">click here</a></p>

			<div id="afterInnerPageContent"></div>
		</div>
	</div>

{% endblock %}
